<!-- Check if current_user alredy voted this micropost -->
<div class="vote_form">
	<% unless current_user.voted?(micropost) %>
		<%= render 'microposts/upvote', micropost: micropost %>
	<% else %>
		<%= render 'microposts/downvote', micropost: micropost %>
	<% end %>

	
</div>

<span class="vote_count">
<%= pluralize(micropost.votes.count, "vote") %>
</span>